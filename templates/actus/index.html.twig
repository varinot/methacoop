{% extends 'base.html.twig' %}

{% block title %}METHACOOP Actualités{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: grey; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>LES ACTUALITÉS </h1>

    {% for new in news %}
    <div>
        <h2><a href="{{ path('actus_montrer', {id: new.id}) }}">{{ new.newstit }} </a></h2>
        <p>{{ new.newscont }} </p>
    </div>
    {% endfor %}

</div>
{% endblock %}
