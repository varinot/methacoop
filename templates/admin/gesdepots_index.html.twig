{% extends 'base.html.twig' %}

{% block title %}GESTION DEPOTS{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>GESTION DES DÉPÔTS MEMBRES</h1>
    <br>
    </br>
    {% for depot in depots %}
    <div>
    
    <h2><a href="{{ path('app_admin_gesdepots_detail', {id: depot.id}) }}">{{ depot.depotit }} </a></h2>
        <p>Créé il y a {{ depot.createdAt|ago }} </p>
        <p>Mis à jour il y a {{ depot.updatedAt|ago }} </p> 
        <p> par {{ depot.user.nom }} </p>
    </div>
    {% endfor %}
    <div>
        <h2><a href="{{ path('app_admin_gesdepots_ajout') }}"> Création d'un Dépôt</a></h2>
        <p>  --------------        </p>
        <h2><a href="{{ path('app_admin')}}">retour espace administrateur</a></h2>
    </div>  
</div>
{% endblock %}