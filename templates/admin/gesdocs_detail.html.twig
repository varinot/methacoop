{% extends 'base.html.twig' %}

{% block title %}Gestion Détail DOCUMENTATION {% endblock %}

{% block body %}
    <style>
    .example-wrapper { margin: 1em auto; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: grey; padding: 2px 6px; }
    </style>
    <h1>{{ doc.doctit }}</h1>
    <br>
       <p>{{ doc.docref }}</p> 
       <p>créée le {{ doc.createdAt|date }} </p> 
       <br>
       <a href="{{ path('app_admin_gesdocs_maj', {id: doc.id})}}">  mise à jour de la documentation</a>
       </br>
    <p>
    <form action="{{ path('app_admin_gesdocs_supp',{id: doc.id}) }}" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="Suppression"> 
    </form>
    </p>
    <br>
    <a href="{{ path('app_admin_gesdocs')}}">retour gestion liste des documentations</a><br>
    <br>
    <a href="{{ path('app_admin')}}">retour espace administrateur</a>
{% endblock %}