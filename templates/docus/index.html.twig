{% extends 'base.html.twig' %}

{% block title %}METHACOOP Documentations{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: pink; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>LA DOCUMENTATION </h1>

    {% for doc in docs %}
    <div>
        <h2>{{ doc.doctit }} titre de la documentation</h2>
        <p>{{ doc.docref }} </p>
    </div>
    {% endfor %}   
    
</div>
{% endblock %}
