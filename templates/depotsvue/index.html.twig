{% extends 'base.html.twig' %}

{% block title %}METHACOOP Dépôts membres{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: pink; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>LES DEPÔTS DES MEMBRES </h1>

    {% for depot in depots %}
    <div>
        <h2><a href="{{ path('app_depotsvue_detail_depotsvue', {id: depot.id}) }}">{{ depot.depotit }}</a></h2>
        <p>Créé il ya {{ depot.createdAt|ago }} </p>
        <p>Mis à jour il y a {{ depot.updatedAt|ago }} </p> 
        <p> par {{ depot.user.nom }} </p>
    </div>
    {% endfor %}   
    
</div>
{% endblock %}