{% extends 'base.html.twig' %}

{% block title %}METHACOOP Dépôts membres{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: pink; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>LES DEPÔTS DES MEMBRES </h1>

    {% for depot in depots %}
    <div>
        <h2><a href="{{ path('app_depotsvue_detail_depotsvue', {id: depot.id}) }}">{{ depot.depotit }}</a></h2>
        <p>Créé le {{ depot.createdAt|date('d-m-Y')}} </p>
        <p>Mis à jour le {{ depot.updatedAt|date('d-m-Y') }} </p> 
        {% if depot.user.nom != '' %}
           <p>{{ depot.deporef }} </p>
            <p> par {{ depot.user.nom }} </p>
        {% else %}
            <p> par ADMINISTRATEUR </p>
        {% endif %}
        <p>{{ depot.deporef }} </p>
    </div>
    {% endfor %}   
    
</div>
{% endblock %}